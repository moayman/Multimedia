<Window x:Class="multimedia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
	<Window.Resources>
		<Storyboard x:Key="Play">
			<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="btnPlay">
				<DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}"/>
			</ObjectAnimationUsingKeyFrames>
			<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="btnPause">
				<DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
			</ObjectAnimationUsingKeyFrames>
		</Storyboard>
		<Storyboard x:Key="Pause">
			<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="btnPlay">
				<DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
			</ObjectAnimationUsingKeyFrames>
			<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="btnPause">
				<DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}"/>
			</ObjectAnimationUsingKeyFrames>
		</Storyboard>
	</Window.Resources>
    <Grid>
    	<Grid x:Name="Player" Margin="0" VerticalAlignment="Bottom">
    		<Path Stroke="#FF5B5B5B" HorizontalAlignment="Right" Data="M20,0 L60,0 A30,30,30,0,1,100,0 L140,0 A10,10,90,0,1,140,50 L100,50 A30,30,30,0,1,60,50 L20,50 A10,10,90,0,1,20,0" Margin="0,0,5,5"/>
    		<Button x:Name="btnPlay" Content="Button" HorizontalAlignment="Right" Margin="0,0,65,0" VerticalAlignment="Top" Width="50" Style="{DynamicResource PlayButton}" Height="50"/>
    		<Button x:Name="btnNext" Content="Button" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Top" Width="50" Style="{DynamicResource NextButton}" Height="50"/>
    		<Button x:Name="btnPrev" Content="Button" HorizontalAlignment="Right" VerticalAlignment="Top" Width="50" Style="{DynamicResource NextButton}" Height="50" RenderTransformOrigin="0.5,0.5" Margin="0,0,120,0">
    			<Button.RenderTransform>
    				<TransformGroup>
    					<ScaleTransform/>
    					<SkewTransform/>
    					<RotateTransform Angle="-180"/>
    					<TranslateTransform/>
    				</TransformGroup>
    			</Button.RenderTransform>
    		</Button>
    		<Button x:Name="btnPause" Content="Button" HorizontalAlignment="Right" Margin="0,0,65,0" VerticalAlignment="Top" Width="50" Style="{DynamicResource PauseButton}" Height="50" Visibility="Collapsed"/>
    		<Slider Height="20" Margin="10,15.806,185,0" Style="{DynamicResource Horizontal_Slider}" VerticalAlignment="Top"/>
    	</Grid>
    	<Grid x:Name="FolderSelect" Height="49" Margin="0" Width="517" VerticalAlignment="Top">
    		<TextBox x:Name="txtboxFolder" HorizontalAlignment="Left" Height="26" Margin="102.883,12,0,0" Style="{DynamicResource textbox}" TextWrapping="Wrap" VerticalAlignment="Top" Width="369.117" Background="White" Focusable="False" IsTabStop="False" AllowDrop="False" IsReadOnly="True"/>
    		<Label Content="Folder Path:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="93.883" FontSize="14.667"/>
    		<Button Content="Button" HorizontalAlignment="Left" Margin="477,11,0,0" Style="{DynamicResource BrowseButton}" VerticalAlignment="Top" Width="30" Height="30"/>
    	</Grid>
    </Grid>
</Window>
