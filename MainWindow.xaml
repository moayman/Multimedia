<Window x:Class="multimedia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WAV to MP3 Converter"
        Width="525"
        Height="416" Icon="icon.png">
    <Window.Resources>
        <Storyboard x:Key="Play">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btnPlay" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}" />
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btnPause" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Pause">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btnPlay" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btnPause" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}" />
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Grid x:Name="PlayerAndConverter" Margin="0,0,0,10" Height="119.14" VerticalAlignment="Bottom">
            <Path Margin="0,0,5,5"
                  HorizontalAlignment="Right"
                  Data="M20,0 L60,0 A30,30,30,0,1,100,0 L140,0 A10,10,90,0,1,140,50 L100,50 A30,30,30,0,1,60,50 L20,50 A10,10,90,0,1,20,0"
                  Stroke="#FF5B5B5B" />
            <Button x:Name="btnPlay"
                    Width="50"
                    Height="50"
                    Margin="0,0,65,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="Button"
                    Style="{DynamicResource PlayButton}" IsEnabled="False" />
            <Button x:Name="btnNext"
                    Width="50"
                    Height="50"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="Button"
                    Style="{DynamicResource NextButton}" IsEnabled="False" />
            <Button x:Name="btnPrev"
                    Width="50"
                    Height="50"
                    Margin="0,0,120,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="Button"
                    RenderTransformOrigin="0.5,0.5"
                    Style="{DynamicResource NextButton}" IsEnabled="False">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="-180" />
                        <TranslateTransform />
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button x:Name="btnPause"
                    Width="50"
                    Height="50"
                    Margin="0,0,65,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="Button"
                    Style="{DynamicResource PauseButton}"
                    Visibility="Collapsed" IsEnabled="False" />
            <Slider x:Name="sliderProgress"
                    Height="20"
                    Margin="10,32.306,185,0"
                    VerticalAlignment="Top"
                    Style="{DynamicResource Horizontal_Slider}" IsEnabled="False" />
            <Slider x:Name="sliderFrom" Margin="10,53.306,185,0" Style="{DynamicResource Horizontal_Slider1}" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" IsEnabled="False">
            	<Slider.RenderTransform>
            		<TransformGroup>
            			<ScaleTransform ScaleY="-1" ScaleX="1"/>
            			<SkewTransform AngleY="0" AngleX="0"/>
            			<RotateTransform Angle="0"/>
            			<TranslateTransform/>
            		</TransformGroup>
            	</Slider.RenderTransform>
            </Slider>
            <Slider x:Name="sliderTo" Margin="10,53.306,185,0" Style="{DynamicResource Horizontal_Slider1}" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Value="10" IsEnabled="False">
            	<Slider.RenderTransform>
            		<TransformGroup>
            			<ScaleTransform ScaleY="-1" ScaleX="1"/>
            			<SkewTransform AngleY="0" AngleX="0"/>
            			<RotateTransform Angle="0"/>
            			<TranslateTransform/>
            		</TransformGroup>
            	</Slider.RenderTransform>
            </Slider>
            <Button x:Name="btnConvert"
            	Margin="0,0,10,10"
            	Content="Convert"
            	Style="{DynamicResource NormalButton}" HorizontalAlignment="Right" Width="160.5" Height="36" VerticalAlignment="Bottom" IsEnabled="False" />
            <Label x:Name="lblProgress" Content="0:00" Margin="10,0,185,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="21.333"/>
            <Label x:Name="lblTo" Content="To: 0:00" HorizontalAlignment="Right" Margin="0,88.18,185,0" VerticalAlignment="Top" Width="110" FlowDirection="RightToLeft"/>
            <Label x:Name="lblFrom" Content="From: 0:00" HorizontalAlignment="Left" Margin="10,88.18,0,0" VerticalAlignment="Top" Width="110"/>
        </Grid>
        <Grid x:Name="FolderSelect"
              Height="49"
              Margin="0"
              VerticalAlignment="Top">
            <TextBox x:Name="txtboxFolder"
                     Height="26"
                     Margin="103,12,45,0"
                     VerticalAlignment="Top"
                     AllowDrop="False"
                     Background="White"
                     Focusable="False"
                     IsReadOnly="True"
                     IsTabStop="False"
                     Style="{DynamicResource textbox}"
                     TextWrapping="Wrap" />
            <Label Width="93.883"
                   Margin="10,10,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Content="Folder Path:"
                   FontSize="14.667" />
            <Button x:Name="btnBrowse"
                    Height="30"
                    Margin="0,10,10,0"
                    VerticalAlignment="Top"
                    Content="Button"
                    Style="{DynamicResource BrowseButton}" HorizontalAlignment="Right" Width="30" />
        </Grid>
        <DataGrid x:Name="datagridPlaylistInfo"
                  Margin="10,55,10,145" IsEnabled="False" />
    </Grid>
</Window>
