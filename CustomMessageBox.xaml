<Window x:Class="multimedia.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        MinWidth="300" MaxWidth="600" MaxHeight="1200" Width="Auto" Height="Auto" Background="#FFEEEEF2" MouseLeftButtonDown="Window_MouseLeftButtonDown" ResizeMode="NoResize"  WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <Border BorderBrush="#FF007ACC" BorderThickness="2">
        <Grid x:Name="LayoutRoot">
            <TextBlock x:Name="Message" TextWrapping="Wrap" VerticalAlignment="Top" Margin="50,25,50,75" Foreground="#FF007ACC" FontFamily="Maven Pro 300" FontSize="24" TextAlignment="Center"/>
            <Button x:Name="btnOK" Content="OK" VerticalAlignment="Bottom" HorizontalAlignment="Center" Style="{DynamicResource NormalButton}" Margin="0,0,0,30" Width="61.5" Height="31.1" FontSize="24" Click="btnOK_Click" TabIndex="0"/>
        </Grid>
    </Border>
</Window>
